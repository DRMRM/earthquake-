<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:orientation="vertical" >

        <TextView
            android:id="@+id/tx_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_gravity="left"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="@color/android_darkgreen"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/tx_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_gravity="right"
            android:textColor="@color/android_darkblue"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tx_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_gravity="left"
            android:textColor="@color/android_darkblue"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <TextView
            android:id="@+id/tx_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_gravity="left"
            android:textColor="@color/android_darkblue"
            android:textAppearance="?android:attr/textAppearanceSmall" />





        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15sp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:gravity="left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Ubication"
                    android:textColor="@color/android_gray"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_ping"
                    android:layout_marginTop="8sp"
                    android:background="@drawable/pin_map"/>

                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See Details"
                    android:textColor="@color/android_gray"/>

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="55sp"
                    android:id="@+id/img_see"
                    android:background="@android:drawable/ic_menu_view"/>

                </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
