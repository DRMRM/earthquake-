<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maps_blured"
    app:parallax_factor="1.9" >
<!-- android:background="@drawable/maps_blured"-->
    <com.nirhart.parallaxscroll.views.ParallaxScrollView

        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="170sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sismo"/>
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_marginTop="-68sp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Large Text"
                    android:id="@+id/tex_title"
                    android:textStyle="bold|italic"
                    android:textColor="@color/android_white"

                    android:layout_gravity="center"
                    android:gravity="center"

                    />

                <TextView
                    android:layout_marginTop="35sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/tex_id"
                    android:textStyle="bold|italic"
                    android:textColor="@color/android_darkorange"
                    android:textSize="15sp"
                    android:layout_gravity="left"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tex_place"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/android_darkpink"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tex_mag"
                    android:layout_gravity="right"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/android_darkgreen"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tex_alert"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:layout_marginTop="20sp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/android_darkred"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tex_tsu"
                    android:layout_gravity="left"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/android_red"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordes"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical"
                    android:layout_marginBottom="10sp">
                    <TextView
                        android:layout_margin="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Earthquake "
                        android:textColor="@color/android_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/tex_type"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Earthquake "
                        android:textColor="@color/android_blue_dark"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_marginLeft="15sp"
                        />

                    <View style ="@style/division"/>


                        <TextView
                            android:id="@+id/tex_code"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Earthquake "
                            android:textColor="@color/android_blue_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_marginLeft="15sp"
                            />
                    <View style ="@style/division"/>
                        <TextView
                            android:id="@+id/tex_magType"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Earthquake "
                            android:textColor="@color/android_blue_dark"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:layout_marginLeft="15sp"
                            />
                    <View style ="@style/division"/>



                    </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </com.nirhart.parallaxscroll.views.ParallaxScrollView>





</RelativeLayout>